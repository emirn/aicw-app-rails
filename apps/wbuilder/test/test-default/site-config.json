{
  "site": {
    "name": "Test Blog",
    "tagline": "Testing the default template features",
    "description": "A test site to verify categories, search, llms.txt, and JSON-LD features work correctly.",
    "url": "https://test-default.sites.pgndr.com",
    "language": "en"
  },
  "logo": {
    "type": "text",
    "text": "TestBlog",
    "show_border": true,
    "border_color": "#10B981"
  },
  "hero": {
    "enabled": true,
    "title": "Welcome to the Test Blog",
    "subtitle": "Testing categories, search, llms.txt, and JSON-LD features",
    "show_on_all_pages": false
  },
  "colors": {
    "primary": "#10B981",
    "primary_hover": "#059669",
    "accent": "#F59E0B",
    "text_primary": "#0F172A",
    "text_secondary": "#475569",
    "text_muted": "#9CA3AF",
    "background": "#FFFFFF",
    "background_secondary": "#F8FAFC",
    "border": "#E2E8F0"
  },
  "dark_mode": {
    "enabled": true,
    "default": "dark",
    "toggle_position": "footer",
    "colors": {
      "text_primary": "#FFFFFF",
      "text_secondary": "#D1D5DB",
      "text_muted": "#9CA3AF",
      "background": "#111827",
      "background_secondary": "#1F2937",
      "border": "#374151"
    }
  },
  "typography": {
    "font_family": "Inter, system-ui, sans-serif",
    "heading_font_family": "Inter, system-ui, sans-serif",
    "google_fonts": ["Inter:wght@400;500;600;700"]
  },
  "header": {
    "style": "pill",
    "show_search": true,
    "nav_links": [
      { "label": "Home", "url": "/" },
      { "label": "Categories", "url": "/categories/" }
    ]
  },
  "footer": {
    "show_logo": true,
    "show_tagline": true,
    "columns": [],
    "social_links": { "rss": true },
    "copyright_text": "{{YEAR}} {{SITE_NAME}}",
    "powered_by_text": "Built with AICW Website Builder",
    "show_powered_by": true
  },
  "blog": {
    "section_title": "LATEST POSTS",
    "posts_per_page": 9,
    "show_categories": true,
    "show_date": true,
    "show_author": true,
    "show_excerpt": true,
    "show_reading_time": true,
    "show_table_of_contents": true,
    "show_related_posts": true,
    "pagination_style": "pages",
    "date_format": "MMM d, yyyy"
  },
  "article": {
    "show_social_share": true,
    "social_share_buttons": ["twitter", "facebook", "linkedin", "copy"],
    "show_author_bio": false,
    "show_tags": true
  },
  "seo": {
    "title_separator": " | ",
    "enable_json_ld": true,
    "robots_no_index": false,
    "json_ld": {
      "organization_name": "Test Blog Inc.",
      "organization_logo": "/logo.png"
    }
  },
  "categories": {
    "enabled": true,
    "show_index": true,
    "url_prefix": "category"
  },
  "search": {
    "enabled": true,
    "placeholder": "Search articles...",
    "show_in_header": true
  },
  "llms_txt": {
    "enabled": true,
    "include_articles": true,
    "max_articles": 50,
    "include_categories": true
  },
  "tracking": {},
  "aicw": {
    "enabled": false
  }
}
