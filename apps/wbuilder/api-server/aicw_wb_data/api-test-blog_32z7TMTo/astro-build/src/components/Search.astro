---
import type { SiteConfig } from '../lib/config';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
const placeholder = config.search?.placeholder || 'Search articles...';
---

<!-- Search Modal -->
<div
  id="search-modal"
  class="fixed inset-0 z-[100] hidden"
  role="dialog"
  aria-modal="true"
  aria-labelledby="search-title"
>
  <!-- Backdrop -->
  <div
    class="fixed inset-0 bg-black/50 backdrop-blur-sm"
    id="search-backdrop"
  ></div>

  <!-- Modal Content -->
  <div class="fixed inset-0 flex items-start justify-center pt-[10vh] px-4">
    <div
      class="w-full max-w-2xl bg-[var(--color-bg-primary)] dark:bg-[var(--color-dark-bg-primary)] rounded-2xl shadow-2xl border border-[var(--color-border)] dark:border-[var(--color-dark-border)] overflow-hidden"
    >
      <!-- Search Header -->
      <div class="flex items-center justify-between px-4 py-3 border-b border-[var(--color-border)] dark:border-[var(--color-dark-border)]">
        <h2 id="search-title" class="sr-only">Search</h2>
        <div class="flex items-center gap-2 text-sm text-[var(--color-text-muted)] dark:text-[var(--color-dark-text-muted)]">
          <kbd class="px-1.5 py-0.5 text-xs rounded bg-[var(--color-bg-secondary)] dark:bg-[var(--color-dark-bg-secondary)] border border-[var(--color-border)] dark:border-[var(--color-dark-border)]">Esc</kbd>
          <span>to close</span>
        </div>
        <button
          type="button"
          id="search-close-btn"
          class="p-1 rounded-lg text-[var(--color-text-muted)] dark:text-[var(--color-dark-text-muted)] hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] hover:bg-[var(--color-bg-secondary)] dark:hover:bg-[var(--color-dark-bg-secondary)] transition-colors"
          aria-label="Close search"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Pagefind Search Container -->
      <div id="pagefind-container" class="p-4" data-placeholder={placeholder}></div>
    </div>
  </div>
</div>

<style is:global>
  /* Pagefind UI Customization */
  :root {
    --pagefind-ui-scale: 1;
    --pagefind-ui-primary: var(--color-primary);
    --pagefind-ui-text: var(--color-text-primary);
    --pagefind-ui-background: var(--color-bg-primary);
    --pagefind-ui-border: var(--color-border);
    --pagefind-ui-tag: var(--color-bg-secondary);
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 0.5rem;
    --pagefind-ui-font: inherit;
  }

  [data-theme="dark"] {
    --pagefind-ui-text: var(--color-dark-text-primary);
    --pagefind-ui-background: var(--color-dark-bg-primary);
    --pagefind-ui-border: var(--color-dark-border);
    --pagefind-ui-tag: var(--color-dark-bg-secondary);
  }

  .pagefind-ui__search-input {
    font-size: 1rem !important;
    padding: 0.75rem 1rem !important;
  }

  .pagefind-ui__search-clear {
    padding: 0 0.75rem !important;
  }

  .pagefind-ui__result-link {
    color: var(--color-primary) !important;
  }

  .pagefind-ui__result-link:hover {
    text-decoration: underline !important;
  }

  .pagefind-ui__result-excerpt {
    color: var(--color-text-secondary) !important;
  }

  [data-theme="dark"] .pagefind-ui__result-excerpt {
    color: var(--color-dark-text-secondary) !important;
  }

  .pagefind-ui__message {
    color: var(--color-text-muted) !important;
  }

  [data-theme="dark"] .pagefind-ui__message {
    color: var(--color-dark-text-muted) !important;
  }

  /* Results container max height with scroll */
  .pagefind-ui__results {
    max-height: 60vh;
    overflow-y: auto;
  }
</style>

<script>
  import { PagefindUI } from '@pagefind/default-ui';

  let pagefindInstance: PagefindUI | null = null;

  function initializeSearch() {
    const container = document.getElementById('pagefind-container');
    if (!container) return;

    const placeholder = container.dataset.placeholder || 'Search...';

    // Initialize Pagefind UI
    pagefindInstance = new PagefindUI({
      element: '#pagefind-container',
      showSubResults: true,
      showImages: false,
      translations: {
        placeholder: placeholder,
        zero_results: 'No results found for "[SEARCH_TERM]"',
      },
    });
  }

  function openSearch() {
    const modal = document.getElementById('search-modal');
    if (!modal) return;

    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    // Focus the search input
    setTimeout(() => {
      const input = modal.querySelector<HTMLInputElement>('.pagefind-ui__search-input');
      input?.focus();
    }, 100);
  }

  function closeSearch() {
    const modal = document.getElementById('search-modal');
    if (!modal) return;

    modal.classList.add('hidden');
    document.body.style.overflow = '';

    // Clear search on close
    const input = modal.querySelector<HTMLInputElement>('.pagefind-ui__search-input');
    if (input) {
      input.value = '';
      input.dispatchEvent(new Event('input', { bubbles: true }));
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initializeSearch);

  // Also initialize on Astro page transitions
  document.addEventListener('astro:page-load', initializeSearch);

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    // Close button
    document.getElementById('search-close-btn')?.addEventListener('click', closeSearch);

    // Backdrop click
    document.getElementById('search-backdrop')?.addEventListener('click', closeSearch);

    // Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeSearch();
      }
    });

    // Cmd/Ctrl + K to open search
    document.addEventListener('keydown', (e) => {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        const modal = document.getElementById('search-modal');
        if (modal?.classList.contains('hidden')) {
          openSearch();
        } else {
          closeSearch();
        }
      }
    });

    // Listen for custom event from search trigger
    document.addEventListener('open-search', openSearch);
  });

  // Make functions available globally for other components
  (window as any).openSearch = openSearch;
  (window as any).closeSearch = closeSearch;
</script>
