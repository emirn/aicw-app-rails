---
import type { SiteConfig } from '../lib/config';
import { replacePlaceholders } from '../lib/config';

interface Props {
  config: SiteConfig;
}

const { config } = Astro.props;
const currentYear = new Date().getFullYear();

const copyrightText = config.footer.copyrightText
  ? replacePlaceholders(config.footer.copyrightText, config)
  : `${currentYear} ${config.branding.site.name}`;
---

<footer class="bg-[var(--color-bg-secondary)] dark:bg-[var(--color-dark-bg-secondary)] border-t border-[var(--color-border)] dark:border-[var(--color-dark-border)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {(config.footer.columns.length > 0 || config.footer.showLogo) && (
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-8">
        <!-- Logo and Tagline Column -->
        {config.footer.showLogo && (
          <div class="col-span-2 md:col-span-1">
            <a href="/" class="inline-block font-bold text-xl text-[var(--color-text-primary)] dark:text-[var(--color-dark-text-primary)] mb-2">
              {config.branding.logo.type === 'image' && config.branding.logo.image_url ? (
                <img src={config.branding.logo.image_url} alt={config.branding.site.name} class="h-8 w-auto" />
              ) : (
                <span>{config.branding.logo.text || config.branding.brand_name || config.branding.site.name}</span>
              )}
            </a>
            {config.footer.showTagline && config.branding.site.tagline && (
              <p class="text-sm text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)]">
                {config.branding.site.tagline}
              </p>
            )}
          </div>
        )}

        <!-- Link Columns -->
        {config.footer.columns.map((column) => (
          <div>
            <h3 class="font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-dark-text-primary)] mb-4">
              {column.title}
            </h3>
            <ul class="space-y-2">
              {column.links.map((link) => (
                <li>
                  <a
                    href={link.url}
                    class:list={[
                      link.className || "text-sm text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)] hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] transition-colors"
                    ]}
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    )}

    <!-- Social Links -->
    {config.footer.socialLinks && (
      <div class="flex items-center gap-4 mb-8">
        {config.footer.socialLinks.twitter && (
          <a
            href={config.footer.socialLinks.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)] hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] transition-colors"
            aria-label="Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
            </svg>
          </a>
        )}

        {config.footer.socialLinks.linkedin && (
          <a
            href={config.footer.socialLinks.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)] hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </a>
        )}

        {config.footer.socialLinks.facebook && (
          <a
            href={config.footer.socialLinks.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)] hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>
        )}

        {config.footer.socialLinks.rss && (
          <a
            href="/rss.xml"
            class="text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)] hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] transition-colors"
            aria-label="RSS Feed"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z" />
            </svg>
          </a>
        )}
      </div>
    )}

    <!-- Copyright and Powered By -->
    <div class="pt-8 border-t border-[var(--color-border)] dark:border-[var(--color-dark-border)] flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-[var(--color-text-secondary)] dark:text-[var(--color-dark-text-secondary)]">
      <p>&copy; {copyrightText}</p>

      {config.footer.showPoweredBy && config.footer.poweredByText && (
        <p>
          <a
            href="https://aicw.io"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-[var(--color-text-primary)] dark:hover:text-[var(--color-dark-text-primary)] transition-colors"
          >
            {config.footer.poweredByText}
          </a>
        </p>
      )}
    </div>
  </div>
</footer>
