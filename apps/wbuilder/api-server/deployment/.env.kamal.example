# Kamal Deployment Environment Variables
# Copy this file to .env.kamal and fill in your values
# DO NOT commit .env.kamal to git!
#
# IMPORTANT: All variables must be exported to be available to Kamal
# Use: source ./.env.kamal && kamal deploy -c config/deploy.yml

# AWS Lightsail Server IP Address
# Get this from your Lightsail console after creating the instance
export AICW_WB_SERVER_IP=1.2.3.4

# Domain name for the API (REQUIRED for SSL)
# Must have DNS A record pointing to AICW_WB_SERVER_IP above
# Example: api-wb.apisk.com -> 1.2.3.4
export AICW_WB_DOMAIN=api-wb.apisk.com

# SSH Configuration
export AICW_WB_DEPLOY_USERNAME=ubuntu
export AICW_WB_DEPLOY_SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa

# API Authentication Key
export AICW_WEBSITE_BUILD_API_KEY=your_secure_api_key_here

# Cloudflare Configuration
export CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
export CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
export CLOUDFLARE_AICW_ZONE_ID=your_zone_id_for_aicw_io

# GitHub Container Registry (GHCR) Configuration
export KAMAL_REGISTRY_USERNAME=your_github_username
export KAMAL_REGISTRY_PASSWORD=your_github_personal_access_token
